@model DeliveryDost.Web.ViewModels.Bc.BcPickupLocationViewModel
@{
    ViewData["Title"] = "Add Pickup Location";
}

<div class="page-header">
    <h1 class="page-title">Add Pickup Location</h1>
    <p class="page-subtitle">Add a new pickup point for your business</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="AddPickupLocation" method="post">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="LocationName" class="form-label"></label>
                        <input asp-for="LocationName" class="form-control" placeholder="e.g., Warehouse, Branch Office" />
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="AddressLine1" class="form-label"></label>
                <input asp-for="AddressLine1" class="form-control" placeholder="Building, Street, Area" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AddressLine2" class="form-label"></label>
                <input asp-for="AddressLine2" class="form-control" placeholder="Landmark (Optional)" />
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" placeholder="City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="State" class="form-label"></label>
                        <select asp-for="State" class="form-select">
                            <option value="">Select State</option>
                            <option value="Andhra Pradesh">Andhra Pradesh</option>
                            <option value="Delhi">Delhi</option>
                            <option value="Gujarat">Gujarat</option>
                            <option value="Karnataka">Karnataka</option>
                            <option value="Maharashtra">Maharashtra</option>
                            <option value="Tamil Nadu">Tamil Nadu</option>
                            <option value="Telangana">Telangana</option>
                            <option value="Uttar Pradesh">Uttar Pradesh</option>
                            <option value="West Bengal">West Bengal</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Pincode" class="form-label"></label>
                        <input asp-for="Pincode" class="form-control" placeholder="6-digit pincode" maxlength="6" />
                        <span asp-validation-for="Pincode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <h5 class="mt-4 mb-3"><i class="bi bi-person me-2"></i>Contact Details (Optional)</h5>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ContactName" class="form-label"></label>
                        <input asp-for="ContactName" class="form-control" placeholder="Contact person name" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ContactPhone" class="form-label"></label>
                        <input asp-for="ContactPhone" class="form-control" placeholder="10-digit phone" maxlength="10" />
                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <input type="hidden" asp-for="Latitude" />
            <input type="hidden" asp-for="Longitude" />

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="PickupLocations" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Add Location
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
