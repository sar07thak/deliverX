@model DeliveryDost.Web.ViewModels.Delivery.AvailableDeliveriesViewModel
@{
    ViewData["Title"] = "Available Deliveries";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Available Deliveries</h1>
            <p class="page-subtitle">Accept deliveries to start earning</p>
        </div>
        <form asp-action="ToggleAvailability" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="goOnline" value="@(!Model.IsOnline)" />
            <button type="submit" class="btn @(Model.IsOnline ? "btn-danger" : "btn-success")">
                <i class="bi @(Model.IsOnline ? "bi-toggle-on" : "bi-toggle-off") me-1"></i>
                @(Model.IsOnline ? "Go Offline" : "Go Online")
            </button>
        </form>
    </div>
</div>

<!-- Status Card -->
<div class="card mb-4 @(Model.IsOnline ? "border-success" : "border-secondary")">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-4">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        @if (Model.IsOnline)
                        {
                            <span class="badge bg-success fs-6 px-3 py-2">
                                <i class="bi bi-broadcast me-1"></i> Online
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6 px-3 py-2">
                                <i class="bi bi-moon me-1"></i> Offline
                            </span>
                        }
                    </div>
                    <div>
                        <small class="text-muted d-block">Active Deliveries</small>
                        <strong>@Model.Availability.ActiveDeliveries / @Model.Availability.MaxConcurrentDeliveries</strong>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @if (!Model.IsOnline)
                {
                    <div class="alert alert-warning mb-0 py-2">
                        <i class="bi bi-info-circle me-1"></i>
                        You are currently offline. Go online to receive new delivery requests.
                    </div>
                }
                else if (!Model.Deliveries.Any())
                {
                    <div class="alert alert-info mb-0 py-2">
                        <i class="bi bi-info-circle me-1"></i>
                        No pending deliveries in your area. Stay online to receive new requests.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Available Deliveries -->
@if (Model.Deliveries.Any())
{
    <div class="row">
        @foreach (var delivery in Model.Deliveries)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <i class="bi bi-box me-1"></i>
                            @delivery.PackageType.ToUpper()
                        </span>
                        <span class="badge @(delivery.Priority == "ASAP" ? "bg-danger" : "bg-primary")">
                            @delivery.Priority
                        </span>
                    </div>
                    <div class="card-body">
                        <!-- Locations -->
                        <div class="mb-3">
                            <div class="d-flex mb-2">
                                <span class="badge bg-success me-2" style="min-width: 60px;">Pickup</span>
                                <small class="text-truncate" title="@delivery.PickupAddress">@delivery.PickupAddress</small>
                            </div>
                            <div class="d-flex">
                                <span class="badge bg-danger me-2" style="min-width: 60px;">Drop</span>
                                <small class="text-truncate" title="@delivery.DropAddress">@delivery.DropAddress</small>
                            </div>
                        </div>

                        <!-- Stats -->
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <small class="text-muted d-block">Distance</small>
                                <strong>@delivery.DistanceKm.ToString("F1") km</strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block">Weight</small>
                                <strong>@delivery.WeightKg kg</strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block">Earn</small>
                                <strong class="text-success">â‚¹@delivery.EstimatedPrice.ToString("N0")</strong>
                            </div>
                        </div>

                        <!-- Timer -->
                        <div class="text-center mb-3">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>
                                Expires in @delivery.MinutesRemaining min
                            </small>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <form asp-action="Accept" method="post" class="flex-grow-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@delivery.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle me-1"></i> Accept
                                </button>
                            </form>
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#rejectModal-@delivery.Id">
                                <i class="bi bi-x"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Reject Modal -->
                <div class="modal fade" id="rejectModal-@delivery.Id" tabindex="-1">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <form asp-action="Reject" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@delivery.Id" />
                                <div class="modal-header">
                                    <h6 class="modal-title">Reject Delivery</h6>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <select name="reason" class="form-select form-select-sm" required>
                                        <option value="">Select reason</option>
                                        <option value="Too far">Too far</option>
                                        <option value="Busy">Currently busy</option>
                                        <option value="Low price">Low price</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (Model.IsOnline)
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox display-1 text-muted mb-3"></i>
            <h4>No Deliveries Available</h4>
            <p class="text-muted mb-0">New delivery requests will appear here. Stay online!</p>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-moon display-1 text-muted mb-3"></i>
            <h4>You are Offline</h4>
            <p class="text-muted mb-4">Go online to start receiving delivery requests.</p>
            <form asp-action="ToggleAvailability" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="goOnline" value="true" />
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-toggle-on me-1"></i> Go Online
                </button>
            </form>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds if online
        @if (Model.IsOnline)
        {
            <text>
            setTimeout(function() {
                location.reload();
            }, 30000);
            </text>
        }
    </script>
}
