@model DeliveryDost.Web.ViewModels.Business.BulkDeliveryHistoryViewModel

<div class="page-header">
    <h1 class="page-title">Bulk Upload History</h1>
    <p class="page-subtitle">View all your bulk delivery uploads</p>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-clock-history me-2"></i>Upload History</span>
        <a asp-action="BulkCreate" class="btn btn-primary btn-sm">
            <i class="bi bi-upload me-1"></i> New Upload
        </a>
    </div>
    <div class="card-body p-0">
        @if (Model.Batches.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Batch ID</th>
                            <th>Date</th>
                            <th>Deliveries</th>
                            <th>Progress</th>
                            <th>Status</th>
                            <th>Total Cost</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var batch in Model.Batches)
                        {
                            <tr>
                                <td>
                                    <code>@batch.BatchId.ToString().Substring(0, 8)...</code>
                                </td>
                                <td>@batch.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@batch.TotalDeliveries</td>
                                <td>
                                    <div class="progress" style="width: 100px; height: 6px;">
                                        <div class="progress-bar bg-success" style="width: @(batch.TotalDeliveries > 0 ? (batch.CompletedDeliveries * 100 / batch.TotalDeliveries) : 0)%"></div>
                                    </div>
                                    <small class="text-muted">
                                        @batch.CompletedDeliveries / @batch.TotalDeliveries
                                    </small>
                                </td>
                                <td>
                                    <span class="badge @batch.StatusBadgeClass">@batch.Status</span>
                                </td>
                                <td>&#8377;@batch.TotalCost.ToString("N0")</td>
                                <td>
                                    <a asp-action="Index" asp-route-batchId="@batch.BatchId" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav class="p-3">
                    <ul class="pagination justify-content-center mb-0">
                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" asp-action="BulkHistory" asp-route-page="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="empty-state py-5 text-center">
                <i class="bi bi-inbox display-4 text-muted"></i>
                <h5 class="mt-3">No bulk uploads yet</h5>
                <p class="text-muted mb-4">Upload your first CSV file to create multiple deliveries at once.</p>
                <a asp-action="BulkCreate" class="btn btn-primary">
                    <i class="bi bi-upload me-1"></i> Upload CSV
                </a>
            </div>
        }
    </div>
</div>
