@model DeliveryDost.Web.ViewModels.Business.BulkDeliveryConfirmViewModel

<div class="page-header">
    <h1 class="page-title">Confirm Bulk Deliveries</h1>
    <p class="page-subtitle">Review and confirm @Model.TotalCount deliveries before creation</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-list-check me-2"></i>Delivery Preview</span>
                <span class="badge bg-primary">@Model.TotalCount Deliveries</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Drop Address</th>
                                <th>Contact</th>
                                <th>Weight</th>
                                <th>Priority</th>
                                <th class="text-end">Est. Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var delivery in Model.ValidDeliveries.Take(10))
                            {
                                <tr>
                                    <td>@delivery.RowNumber</td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@delivery.DropAddress">
                                            @delivery.DropAddress
                                        </div>
                                    </td>
                                    <td>
                                        <div>@delivery.DropContactName</div>
                                        <small class="text-muted">@delivery.DropContactPhone</small>
                                    </td>
                                    <td>@delivery.WeightKg kg</td>
                                    <td>
                                        <span class="badge @(delivery.Priority == "EXPRESS" ? "bg-warning" : "bg-secondary")">
                                            @delivery.Priority
                                        </span>
                                    </td>
                                    <td class="text-end">&#8377;@delivery.EstimatedPrice.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalCount > 10)
                {
                    <div class="p-3 bg-light text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Showing first 10 of @Model.TotalCount deliveries
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <span><i class="bi bi-receipt me-2"></i>Order Summary</span>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Total Deliveries</span>
                    <strong>@Model.TotalCount</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Estimated Cost</span>
                    <strong>&#8377;@Model.TotalEstimatedCost.ToString("N0")</strong>
                </div>
                <hr />
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Wallet Balance</span>
                    <strong class="@(Model.HasSufficientBalance ? "text-success" : "text-danger")">
                        &#8377;@Model.WalletBalance.ToString("N0")
                    </strong>
                </div>
                @if (!Model.HasSufficientBalance)
                {
                    <div class="alert alert-warning mt-3 mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Insufficient wallet balance. Please add funds to continue.
                    </div>
                }
            </div>
            <div class="card-footer">
                <form asp-action="BulkConfirm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="sessionKey" value="@Model.SessionKey" />

                    @if (Model.HasSufficientBalance)
                    {
                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-check-circle me-1"></i> Confirm & Create All
                        </button>
                    }
                    else
                    {
                        <a asp-controller="Wallet" asp-action="TopUp" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-wallet2 me-1"></i> Add Funds
                        </a>
                    }
                    <a asp-action="BulkCreate" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-1"></i> Upload Different File
                    </a>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Note:</strong> Once confirmed, deliveries will be created and delivery partners will be matched automatically.
        </div>
    </div>
</div>
