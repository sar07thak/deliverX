@model DeliveryDost.Web.ViewModels.Business.BulkDeliveryResultViewModel

<div class="page-header">
    <h1 class="page-title">Bulk Upload Complete</h1>
    <p class="page-subtitle">Your deliveries have been processed</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Summary Card -->
        <div class="card mb-4">
            <div class="card-body text-center py-5">
                @if (Model.SuccessCount == Model.TotalRequested)
                {
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success display-1"></i>
                    </div>
                    <h3 class="text-success">All Deliveries Created Successfully!</h3>
                    <p class="text-muted">@Model.SuccessCount deliveries are now being matched with delivery partners.</p>
                }
                else if (Model.SuccessCount > 0)
                {
                    <div class="mb-4">
                        <i class="bi bi-exclamation-circle-fill text-warning display-1"></i>
                    </div>
                    <h3 class="text-warning">Partially Completed</h3>
                    <p class="text-muted">@Model.SuccessCount of @Model.TotalRequested deliveries were created successfully.</p>
                }
                else
                {
                    <div class="mb-4">
                        <i class="bi bi-x-circle-fill text-danger display-1"></i>
                    </div>
                    <h3 class="text-danger">Upload Failed</h3>
                    <p class="text-muted">No deliveries could be created. Please check the errors below.</p>
                }

                <div class="row g-4 mt-4">
                    <div class="col-4">
                        <div class="stat-mini">
                            <h2 class="mb-0 text-success">@Model.SuccessCount</h2>
                            <small class="text-muted">Created</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat-mini">
                            <h2 class="mb-0 text-danger">@Model.FailedCount</h2>
                            <small class="text-muted">Failed</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat-mini">
                            <h2 class="mb-0">@Model.TotalRequested</h2>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Created Deliveries -->
        @if (Model.CreatedDeliveries.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <span><i class="bi bi-check-circle text-success me-2"></i>Created Deliveries</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Row</th>
                                    <th>Delivery ID</th>
                                    <th>Drop Address</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var delivery in Model.CreatedDeliveries.Take(20))
                                {
                                    <tr>
                                        <td>@delivery.RowNumber</td>
                                        <td>
                                            <code>@delivery.DeliveryId.ToString().Substring(0, 8)...</code>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 200px;">
                                                @delivery.DropAddress
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@delivery.Status</span>
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@delivery.DeliveryId" class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.CreatedDeliveries.Count > 20)
                    {
                        <div class="p-3 bg-light text-center">
                            <small class="text-muted">
                                Showing first 20 of @Model.CreatedDeliveries.Count created deliveries
                            </small>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Errors -->
        @if (Model.Errors.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <span><i class="bi bi-exclamation-triangle text-danger me-2"></i>Failed Deliveries</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Row</th>
                                    <th>Field</th>
                                    <th>Error</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var error in Model.Errors)
                                {
                                    <tr>
                                        <td>@error.RowNumber</td>
                                        <td><code>@error.Field</code></td>
                                        <td class="text-danger">@error.Message</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Actions -->
        <div class="d-flex gap-2 justify-content-center">
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-list me-1"></i> View All Deliveries
            </a>
            <a asp-action="BulkCreate" class="btn btn-outline-primary">
                <i class="bi bi-upload me-1"></i> Upload More
            </a>
            <a asp-controller="Dashboard" asp-action="Business" class="btn btn-outline-secondary">
                <i class="bi bi-house me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<style>
    .stat-mini {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
    }
</style>
