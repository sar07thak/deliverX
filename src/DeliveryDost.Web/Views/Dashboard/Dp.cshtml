@model DeliveryDost.Web.ViewModels.Dashboard.DpDashboardViewModel
@{ ViewData["Title"] = "DP Dashboard"; }

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>
            <p class="page-subtitle">Welcome back! Here's your performance overview.</p>
        </div>
        <span class="badge @(Model.IsOnline ? "bg-success" : "bg-secondary") fs-6 px-3 py-2">
            <i class="bi @(Model.IsOnline ? "bi-broadcast" : "bi-moon") me-1"></i>@(Model.IsOnline ? "Online" : "Offline")
        </span>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3"><div class="card bg-success text-white"><div class="card-body"><small class="text-white-50">Today's Earnings</small><h3 class="mb-0">₹@Model.TodayEarnings.ToString("N0")</h3></div></div></div>
    <div class="col-md-3 mb-3"><div class="card bg-primary text-white"><div class="card-body"><small class="text-white-50">Wallet Balance</small><h3 class="mb-0">₹@Model.WalletBalance.ToString("N0")</h3></div></div></div>
    <div class="col-md-3 mb-3"><div class="card bg-info text-white"><div class="card-body"><small class="text-white-50">Total Deliveries</small><h3 class="mb-0">@Model.TotalDeliveries</h3></div></div></div>
    <div class="col-md-3 mb-3"><div class="card bg-warning"><div class="card-body"><small class="text-muted">Rating</small><h3 class="mb-0"><i class="bi bi-star-fill text-warning"></i> @Model.Rating.ToString("F1")</h3></div></div></div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card h-100">
            <div class="card-header"><i class="bi bi-graph-up me-2"></i>Weekly Earnings</div>
            <div class="card-body"><canvas id="earningsChart" height="200"></canvas></div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header"><i class="bi bi-lightning me-2"></i>Quick Actions</div>
            <div class="card-body d-grid gap-2">
                <a asp-controller="Delivery" asp-action="Available" class="btn btn-primary"><i class="bi bi-box-seam me-1"></i>View Available</a>
                <a asp-controller="Delivery" asp-action="Active" class="btn btn-outline-primary"><i class="bi bi-truck me-1"></i>Active Deliveries</a>
                <a asp-controller="Wallet" asp-action="Index" class="btn btn-outline-success"><i class="bi bi-wallet2 me-1"></i>My Wallet</a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header"><i class="bi bi-clock-history me-2"></i>Recent Deliveries</div>
    <div class="card-body p-0">
        @if (Model.RecentDeliveries.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light"><tr><th>Drop Location</th><th>Status</th><th>Earned</th><th>Date</th></tr></thead>
                    <tbody>
                        @foreach (var d in Model.RecentDeliveries)
                        { <tr><td>@d.DropAddress</td><td><span class="badge @d.StatusBadgeClass">@d.Status</span></td><td>₹@d.Price?.ToString("N0")</td><td><small>@d.CreatedAt.ToString("dd MMM")</small></td></tr> }
                    </tbody>
                </table>
            </div>
        }
        else { <div class="text-center py-4 text-muted">No deliveries yet</div> }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        new Chart(document.getElementById('earningsChart'), {
            type: 'bar',
            data: { labels: [@Html.Raw(string.Join(",", Model.WeeklyEarnings.Select(e => $"'{e.Label}'")))], datasets: [{ label: 'Earnings (₹)', data: [@string.Join(",", Model.WeeklyEarnings.Select(e => e.Value))], backgroundColor: '#198754' }] },
            options: { responsive: true, plugins: { legend: { display: false } } }
        });
    </script>
}
