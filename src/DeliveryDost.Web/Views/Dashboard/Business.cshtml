@model DeliveryDost.Web.ViewModels.Dashboard.BusinessDashboardViewModel
@{ ViewData["Title"] = "Dashboard"; }

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-subtitle">Manage your business deliveries efficiently.</p>
</div>

<!-- Registration Status Card -->
@if (!Model.IsRegistered)
{
    <div class="alert alert-warning mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Registration Incomplete</strong> - Complete your profile to start using all features.
                <br /><small class="text-muted">Status: @Model.RegistrationStatus</small>
            </div>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-warning">
                <i class="bi bi-person-badge me-1"></i>Complete Profile
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-success mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-check-circle me-2"></i>
                <strong>Account Verified</strong> - You're all set to manage your deliveries!
            </div>
            <span class="badge bg-success fs-6"><i class="bi bi-patch-check me-1"></i>Verified</span>
        </div>
    </div>
}

<!-- Stats -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-info">
                <h3>@Model.TotalDeliveries</h3>
                <p>Total Deliveries</p>
            </div>
            <div class="stat-icon primary">
                <i class="bi bi-box-seam"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-info">
                <h3>@Model.ActiveDeliveries</h3>
                <p>In Progress</p>
            </div>
            <div class="stat-icon warning">
                <i class="bi bi-hourglass-split"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-info">
                <h3>@Model.CompletedDeliveries</h3>
                <p>Completed</p>
            </div>
            <div class="stat-icon success">
                <i class="bi bi-check-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-info">
                <h3>&#8377;@Model.WalletBalance.ToString("N0")</h3>
                <p>Wallet Balance</p>
            </div>
            <div class="stat-icon primary">
                <i class="bi bi-wallet2"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <span>Quick Actions</span>
            </div>
            <div class="card-body p-0">
                <a asp-controller="Delivery" asp-action="Create" class="list-item text-decoration-none">
                    <i class="bi bi-plus-circle text-primary me-3"></i>
                    <span>Create Delivery</span>
                </a>
                <a asp-controller="Delivery" asp-action="BulkCreate" class="list-item text-decoration-none">
                    <i class="bi bi-upload text-primary me-3"></i>
                    <span>Bulk Upload</span>
                </a>
                <a asp-controller="Wallet" asp-action="TopUp" class="list-item text-decoration-none">
                    <i class="bi bi-wallet2 text-primary me-3"></i>
                    <span>Add Funds</span>
                </a>
                <a asp-controller="Subscription" asp-action="Index" class="list-item text-decoration-none">
                    <i class="bi bi-star text-primary me-3"></i>
                    <span>Subscription Plans</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Recent Deliveries -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <span>Recent Deliveries</span>
                <a asp-controller="Delivery" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentDeliveries.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var d in Model.RecentDeliveries)
                        {
                            <a asp-controller="Delivery" asp-action="Details" asp-route-id="@d.Id" class="list-group-item list-group-item-action d-flex justify-content-between">
                                <div>
                                    <strong>@d.DropAddress</strong><br />
                                    <small class="text-muted">@d.CreatedAt.ToString("dd MMM yyyy")</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge @d.StatusBadgeClass">@d.Status</span><br />
                                    <small>&#8377;@d.Price?.ToString("N0")</small>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>No deliveries yet</h5>
                        <p class="mb-3">Start sending packages to your customers</p>
                        <a asp-controller="Delivery" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus me-1"></i> Create Delivery
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
