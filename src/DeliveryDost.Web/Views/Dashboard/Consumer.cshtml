@model DeliveryDost.Web.ViewModels.Dashboard.ConsumerDashboardViewModel
@{ ViewData["Title"] = "My Dashboard"; }

<div class="page-header">
    <h1 class="page-title"><i class="bi bi-house me-2"></i>Welcome!</h1>
    <p class="page-subtitle">Track your deliveries and manage your account</p>
</div>

<!-- Registration Status Card -->
@if (!Model.IsRegistered)
{
    <div class="alert alert-warning mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Profile Incomplete</strong> - Complete your profile to start ordering deliveries.
                <br /><small class="text-muted">Status: @Model.RegistrationStatus</small>
            </div>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-warning">
                <i class="bi bi-person-badge me-1"></i>Complete Profile
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-success mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-check-circle me-2"></i>
                <strong>Account Active</strong> - You're all set to order deliveries!
            </div>
            <span class="badge bg-success fs-6"><i class="bi bi-patch-check me-1"></i>Verified</span>
        </div>
    </div>
}

<div class="row mb-4">
    <div class="col-md-3 mb-3"><div class="card bg-primary text-white"><div class="card-body text-center"><h3>₹@Model.WalletBalance.ToString("N0")</h3><small>Wallet Balance</small></div></div></div>
    <div class="col-md-3 mb-3"><div class="card bg-info text-white"><div class="card-body text-center"><h3>@Model.TotalDeliveries</h3><small>Total Deliveries</small></div></div></div>
    <div class="col-md-3 mb-3"><div class="card bg-warning"><div class="card-body text-center"><h3>@Model.ActiveDeliveries</h3><small>Active</small></div></div></div>
    <div class="col-md-3 mb-3"><div class="card bg-success text-white"><div class="card-body text-center"><h3>@Model.CompletedDeliveries</h3><small>Completed</small></div></div></div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between"><span><i class="bi bi-clock-history me-2"></i>Recent Deliveries</span><a asp-controller="Delivery" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a></div>
            <div class="card-body p-0">
                @if (Model.RecentDeliveries.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var d in Model.RecentDeliveries)
                        {
                            <a asp-controller="Delivery" asp-action="Details" asp-route-id="@d.Id" class="list-group-item list-group-item-action d-flex justify-content-between">
                                <div><strong>@d.DropAddress</strong><br /><small class="text-muted">@d.CreatedAt.ToString("dd MMM yyyy")</small></div>
                                <div class="text-end"><span class="badge @d.StatusBadgeClass">@d.Status</span><br /><small>₹@d.Price?.ToString("N0")</small></div>
                            </a>
                        }
                    </div>
                }
                else { <div class="text-center py-5 text-muted">No deliveries yet. Create your first delivery!</div> }
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header"><i class="bi bi-lightning me-2"></i>Quick Actions</div>
            <div class="card-body d-grid gap-2">
                <a asp-controller="Delivery" asp-action="Create" class="btn btn-primary btn-lg"><i class="bi bi-plus-circle me-2"></i>New Delivery</a>
                <a asp-controller="Wallet" asp-action="TopUp" class="btn btn-outline-success"><i class="bi bi-wallet2 me-1"></i>Add Money</a>
                <a asp-controller="Delivery" asp-action="Index" class="btn btn-outline-primary"><i class="bi bi-list me-1"></i>My Deliveries</a>
                <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary"><i class="bi bi-person me-1"></i>Profile</a>
            </div>
        </div>
    </div>
</div>
