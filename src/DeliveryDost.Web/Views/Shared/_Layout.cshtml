<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeliveryDost</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Sidebar -->
        <aside id="sidebar">
            <a href="/" class="sidebar-brand">
                <i class="bi bi-truck"></i> DeliveryDost
            </a>
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-grid-1x2"></i> Dashboard
                    </a>
                </li>

                @if (User.IsInRole("DP"))
                {
                    <li class="nav-section">Deliveries</li>
                    <li class="nav-item">
                        <a asp-controller="Delivery" asp-action="Available" class="nav-link">
                            <i class="bi bi-box-seam"></i> Available
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Delivery" asp-action="Active" class="nav-link">
                            <i class="bi bi-bicycle"></i> Active
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Delivery" asp-action="History" class="nav-link">
                            <i class="bi bi-clock-history"></i> History
                        </a>
                    </li>

                    <li class="nav-section">Settings</li>
                    <li class="nav-item">
                        <a asp-controller="ServiceArea" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ServiceArea" ? "active" : "")">
                            <i class="bi bi-geo-alt"></i> Service Area
                        </a>
                    </li>
                }

                @if (User.IsInRole("EC") || User.IsInRole("BC") || User.IsInRole("DBC"))
                {
                    <li class="nav-section">Deliveries</li>
                    <li class="nav-item">
                        <a asp-controller="Delivery" asp-action="Create" class="nav-link">
                            <i class="bi bi-plus-circle"></i> New Delivery
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Delivery" asp-action="Index" class="nav-link">
                            <i class="bi bi-list-ul"></i> My Deliveries
                        </a>
                    </li>
                }

                @if (User.IsInRole("EC") || User.IsInRole("BC") || User.IsInRole("DBC") || User.IsInRole("DP"))
                {
                    <li class="nav-section">Support</li>
                    <li class="nav-item">
                        <a asp-controller="Complaint" asp-action="Index" class="nav-link">
                            <i class="bi bi-chat-left-text"></i> My Complaints
                        </a>
                    </li>
                }

                @if (User.IsInRole("DPCM"))
                {
                    <li class="nav-section">My Network</li>
                    <li class="nav-item">
                        <a asp-controller="Dpcm" asp-action="MyDPs" class="nav-link">
                            <i class="bi bi-people"></i> My DPs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="ServiceArea" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ServiceArea" ? "active" : "")">
                            <i class="bi bi-geo-alt"></i> Service Area
                        </a>
                    </li>
                }

                @if (User.IsInRole("DPCM") || User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-section">Management</li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Users" class="nav-link">
                            <i class="bi bi-people"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="KycRequests" class="nav-link">
                            <i class="bi bi-file-earmark-check"></i> KYC Requests
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Complaints" class="nav-link">
                            <i class="bi bi-exclamation-circle"></i> Complaints
                        </a>
                    </li>
                }

                <li class="nav-section">Account</li>
                <li class="nav-item">
                    <a asp-controller="Wallet" asp-action="Index" class="nav-link">
                        <i class="bi bi-wallet2"></i> Wallet
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Profile" class="nav-link">
                        <i class="bi bi-person"></i> Profile
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main id="main">
            <nav class="top-navbar">
                <button class="navbar-toggle" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </button>
                <div></div>
                <div class="user-menu">
                    <div class="user-info d-none d-md-block">
                        <div class="name">@User.FindFirst(System.Security.Claims.ClaimTypes.MobilePhone)?.Value</div>
                        <div class="role">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Wallet" asp-action="Index"><i class="bi bi-wallet2 me-2"></i>Wallet</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="page-content">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @RenderBody()
            </div>
        </main>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
