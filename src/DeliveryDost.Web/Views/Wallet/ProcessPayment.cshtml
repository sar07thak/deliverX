@model DeliveryDost.Web.ViewModels.Wallet.PaymentProcessingViewModel
@{
    ViewData["Title"] = "Processing Payment";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card text-center">
                <div class="card-body py-5">
                    <div class="spinner-border text-primary mb-4" role="status" style="width: 4rem; height: 4rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>

                    <h4 class="mb-3">Processing Payment</h4>
                    <p class="text-muted mb-4">
                        Please wait while we process your payment. Do not close this window.
                    </p>

                    @if (!string.IsNullOrEmpty(Model.GatewayPaymentUrl))
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-1"></i>
                            Redirecting to payment gateway...
                        </div>
                    }
                    else
                    {
                        <!-- Simulated Payment for Development -->
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            <strong>Development Mode</strong>
                            <br />
                            <small>Use the buttons below to simulate payment result</small>
                        </div>

                        <div class="d-grid gap-2">
                            <form asp-action="SimulatePayment" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="paymentId" value="@Model.PaymentId" />
                                <input type="hidden" name="success" value="true" />
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-check-circle me-2"></i>Simulate Success
                                </button>
                            </form>

                            <form asp-action="SimulatePayment" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="paymentId" value="@Model.PaymentId" />
                                <input type="hidden" name="success" value="false" />
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-x-circle me-2"></i>Simulate Failure
                                </button>
                            </form>
                        </div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="bi bi-shield-check me-1"></i>
                        Secure payment processing
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.GatewayPaymentUrl))
{
    @section Scripts {
        <script>
            // Redirect to payment gateway after a short delay
            setTimeout(function() {
                window.location.href = '@Model.GatewayPaymentUrl';
            }, 2000);
        </script>
    }
}
