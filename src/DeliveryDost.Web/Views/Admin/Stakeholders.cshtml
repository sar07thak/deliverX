@model DeliveryDost.Web.ViewModels.Admin.StakeholdersListViewModel
@{ ViewData["Title"] = "Stakeholder List"; }

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title"><i class="bi bi-people me-2"></i>Stakeholder List</h1>
            <p class="page-subtitle">View and manage all registered stakeholders</p>
        </div>
        <a asp-action="StakeholderOnboarding" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i>Register New
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col">
        <div class="card border-0 bg-light">
            <div class="card-body py-2 text-center">
                <h5 class="mb-0 text-purple">@Model.TotalDPCMs</h5>
                <small class="text-muted">DPCMs</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-0 bg-light">
            <div class="card-body py-2 text-center">
                <h5 class="mb-0 text-warning">@Model.TotalDPs</h5>
                <small class="text-muted">Partners</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-0 bg-light">
            <div class="card-body py-2 text-center">
                <h5 class="mb-0 text-info">@Model.TotalBCs</h5>
                <small class="text-muted">Business</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-0 bg-light">
            <div class="card-body py-2 text-center">
                <h5 class="mb-0 text-success">@Model.TotalECs</h5>
                <small class="text-muted">Consumers</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card border-0 bg-light">
            <div class="card-body py-2 text-center">
                <h5 class="mb-0 text-danger">@Model.PendingKYC</h5>
                <small class="text-muted">Pending KYC</small>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input type="text" name="search" class="form-control" placeholder="Phone, Name, Email" value="@Model.SearchTerm">
            </div>
            <div class="col-md-2">
                <label class="form-label">Role</label>
                <select name="role" class="form-select">
                    <option value="">All Roles</option>
                    <option value="DPCM" selected="@(Model.RoleFilter == "DPCM")">DPCM</option>
                    <option value="DP" selected="@(Model.RoleFilter == "DP")">Delivery Partner</option>
                    <option value="BC" selected="@(Model.RoleFilter == "BC")">Business Consumer</option>
                    <option value="EC" selected="@(Model.RoleFilter == "EC")">End Consumer</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <option value="Active" selected="@(Model.StatusFilter == "Active")">Active</option>
                    <option value="Inactive" selected="@(Model.StatusFilter == "Inactive")">Inactive</option>
                </select>
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Search
                </button>
                <a asp-action="Stakeholders" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
            <div class="col-md-2 text-end">
                <span class="badge bg-secondary fs-6">@Model.TotalCount results</span>
            </div>
        </form>
    </div>
</div>

<!-- Stakeholders Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Stakeholders.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Stakeholder</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>KYC</th>
                            <th>Details</th>
                            <th>Joined</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Stakeholders)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@item.FullName</strong>
                                        <br />
                                        <small class="text-muted">@item.PhoneMasked</small>
                                        @if (!string.IsNullOrEmpty(item.EmailMasked))
                                        {
                                            <br />
                                            <small class="text-muted">@item.EmailMasked</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @Model.GetRoleBadgeClass(item.Role)">
                                        @(item.Role switch
                                        {
                                            "DPCM" => "Manager",
                                            "DP" => "Partner",
                                            "BC" or "DBC" => "Business",
                                            "EC" => "Consumer",
                                            _ => item.Role
                                        })
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @Model.GetStatusBadgeClass(item.Status)">@item.Status</span>
                                </td>
                                <td>
                                    <span class="badge @Model.GetKYCBadgeClass(item.KYCStatus)">@item.KYCStatus</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.BusinessName))
                                    {
                                        <small><i class="bi bi-building me-1"></i>@item.BusinessName</small><br />
                                    }
                                    @if (!string.IsNullOrEmpty(item.VehicleType))
                                    {
                                        <small><i class="bi bi-bicycle me-1"></i>@item.VehicleType</small>
                                    }
                                    @if (!string.IsNullOrEmpty(item.DPCMName))
                                    {
                                        <small><i class="bi bi-person-badge me-1"></i>@item.DPCMName</small>
                                    }
                                    @if (item.WalletBalance.HasValue)
                                    {
                                        <br /><small class="text-success"><i class="bi bi-wallet2 me-1"></i>â‚¹@item.WalletBalance.Value.ToString("N0")</small>
                                    }
                                </td>
                                <td>
                                    <small>@item.CreatedAt.ToString("dd MMM yyyy")</small>
                                </td>
                                <td class="text-end">
                                    <a asp-action="StakeholderDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye me-1"></i>View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No stakeholders found</p>
                <a asp-action="StakeholderOnboarding" class="btn btn-primary mt-2">
                    <i class="bi bi-person-plus me-1"></i>Register First Stakeholder
                </a>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Stakeholders" asp-route-page="@(Model.Page - 1)"
                       asp-route-role="@Model.RoleFilter" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchTerm">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
            }
            @{
                var startPage = Math.Max(1, Model.Page - 2);
                var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
            }
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link" asp-action="Stakeholders" asp-route-page="@i"
                       asp-route-role="@Model.RoleFilter" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchTerm">@i</a>
                </li>
            }
            @if (Model.Page < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Stakeholders" asp-route-page="@(Model.Page + 1)"
                       asp-route-role="@Model.RoleFilter" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchTerm">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}

@section Styles {
    <style>
        .bg-purple { background-color: #6f42c1 !important; color: white; }
        .text-purple { color: #6f42c1 !important; }
        .page-header { margin-bottom: 1.5rem; }
        .page-title { font-size: 1.75rem; font-weight: 600; margin-bottom: 0.25rem; }
        .page-subtitle { color: #6c757d; margin-bottom: 0; }
    </style>
}
