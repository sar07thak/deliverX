@model DeliveryDost.Web.ViewModels.Admin.UsersListViewModel
@{ ViewData["Title"] = "User Management"; }

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title"><i class="bi bi-people me-2"></i>User Management</h1>
            <p class="page-subtitle">Manage all platform users</p>
        </div>
        <span class="badge bg-primary fs-6">@Model.TotalCount Users</span>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Filter by Role</label>
                <select name="role" class="form-select" onchange="this.form.submit()">
                    <option value="">All Roles</option>
                    <option value="EC" selected="@(Model.RoleFilter == "EC")">Consumer (EC)</option>
                    <option value="BC" selected="@(Model.RoleFilter == "BC")">Business (BC)</option>
                    <option value="DP" selected="@(Model.RoleFilter == "DP")">Delivery Partner (DP)</option>
                    <option value="DPCM" selected="@(Model.RoleFilter == "DPCM")">Manager (DPCM)</option>
                    <option value="SuperAdmin" selected="@(Model.RoleFilter == "SuperAdmin")">Admin (SA)</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Filter by Status</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="">All Status</option>
                    <option value="Active" selected="@(Model.StatusFilter == "Active")">Active</option>
                    <option value="Inactive" selected="@(Model.StatusFilter == "Inactive")">Inactive</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <a asp-action="Users" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@user.Name</strong>
                                        <br />
                                        <small class="text-muted">@user.Phone</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @user.RoleBadgeClass">@user.RoleDisplayName</span>
                                </td>
                                <td>
                                    @if (user.Status == "Active")
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("dd MMM yyyy")</small>
                                </td>
                                <td class="text-end">
                                    @if (user.Status == "Active")
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deactivateModal"
                                                data-userid="@user.Id"
                                                data-username="@user.Name">
                                            <i class="bi bi-x-circle me-1"></i>Deactivate
                                        </button>
                                    }
                                    else
                                    {
                                        <form asp-action="UpdateUserStatus" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <input type="hidden" name="status" value="Active" />
                                            <button type="submit" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-check-circle me-1"></i>Activate
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No users found</p>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Users" asp-route-page="@(Model.CurrentPage - 1)" asp-route-role="@Model.RoleFilter" asp-route-status="@Model.StatusFilter">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="Users" asp-route-page="@i" asp-route-role="@Model.RoleFilter" asp-route-status="@Model.StatusFilter">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Users" asp-route-page="@(Model.CurrentPage + 1)" asp-route-role="@Model.RoleFilter" asp-route-status="@Model.StatusFilter">Next</a>
                </li>
            }
        </ul>
    </nav>
}

<!-- Deactivate Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-warning me-2"></i>Deactivate User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateUserStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" id="deactivateUserId" />
                <input type="hidden" name="status" value="Inactive" />
                <div class="modal-body">
                    <p>Are you sure you want to deactivate <strong id="deactivateUserName"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason (optional)</label>
                        <textarea name="reason" class="form-control" rows="2" placeholder="Enter reason for deactivation"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Deactivate</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>.bg-purple { background-color: #6f42c1 !important; color: white; }</style>
}

@section Scripts {
    <script>
        document.getElementById('deactivateModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('deactivateUserId').value = button.getAttribute('data-userid');
            document.getElementById('deactivateUserName').textContent = button.getAttribute('data-username');
        });
    </script>
}
