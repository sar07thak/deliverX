@model DeliveryDost.Web.ViewModels.Admin.KycRequestsViewModel
@{ ViewData["Title"] = "KYC Requests"; }

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title"><i class="bi bi-file-earmark-check me-2"></i>KYC Requests</h1>
            <p class="page-subtitle">Review and approve KYC documents</p>
        </div>
        <span class="badge bg-warning text-dark fs-6">@Model.TotalCount Requests</span>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Filter by Status</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="">All Status</option>
                    <option value="PENDING" selected="@(Model.StatusFilter == "PENDING")">Pending</option>
                    <option value="VERIFIED" selected="@(Model.StatusFilter == "VERIFIED")">Approved</option>
                    <option value="REJECTED" selected="@(Model.StatusFilter == "REJECTED")">Rejected</option>
                    <option value="IN_PROGRESS" selected="@(Model.StatusFilter == "IN_PROGRESS")">In Progress</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <a asp-action="KycRequests" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </a>
            </div>
        </form>
    </div>
</div>

<!-- KYC Requests Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Requests.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Document Type</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model.Requests)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@request.UserName</strong>
                                        <br />
                                        <small class="text-muted">@request.UserPhone</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@request.DocumentType</span>
                                </td>
                                <td>
                                    <span class="badge @request.StatusBadgeClass">@request.Status</span>
                                    @if (!string.IsNullOrEmpty(request.RejectionReason))
                                    {
                                        <br />
                                        <small class="text-danger">@request.RejectionReason</small>
                                    }
                                </td>
                                <td>
                                    <small>@request.SubmittedAt.ToString("dd MMM yyyy HH:mm")</small>
                                </td>
                                <td class="text-end">
                                    @if (request.Status == "PENDING" && User.IsInRole("Admin"))
                                    {
                                        <form asp-action="ApproveKyc" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="kycId" value="@request.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-check-circle me-1"></i>Approve
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#rejectModal"
                                                data-kycid="@request.Id"
                                                data-username="@request.UserName">
                                            <i class="bi bi-x-circle me-1"></i>Reject
                                        </button>
                                    }
                                    @if (request.Status == "VERIFIED")
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle-fill me-1"></i>Approved</span>
                                    }
                                    @if (request.Status == "REJECTED")
                                    {
                                        <span class="text-danger"><i class="bi bi-x-circle-fill me-1"></i>Rejected</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-file-earmark-check text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No KYC requests found</p>
            </div>
        }
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="KycRequests" asp-route-page="@(Model.CurrentPage - 1)" asp-route-status="@Model.StatusFilter">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="KycRequests" asp-route-page="@i" asp-route-status="@Model.StatusFilter">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="KycRequests" asp-route-page="@(Model.CurrentPage + 1)" asp-route-status="@Model.StatusFilter">Next</a>
                </li>
            }
        </ul>
    </nav>
}

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-x-circle text-danger me-2"></i>Reject KYC</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="RejectKyc" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="kycId" id="rejectKycId" />
                <div class="modal-body">
                    <p>Reject KYC request for <strong id="rejectUserName"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3" required placeholder="Enter reason for rejection"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('rejectModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('rejectKycId').value = button.getAttribute('data-kycid');
            document.getElementById('rejectUserName').textContent = button.getAttribute('data-username');
        });
    </script>
}
