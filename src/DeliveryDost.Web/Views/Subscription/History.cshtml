@model DeliveryDost.Web.ViewModels.Business.SubscriptionHistoryViewModel

<div class="page-header">
    <h1 class="page-title">Subscription History</h1>
    <p class="page-subtitle">View your billing history and past subscriptions</p>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-receipt me-2"></i>Billing History</span>
        <a asp-action="Index" class="btn btn-outline-primary btn-sm">
            View Plans
        </a>
    </div>
    <div class="card-body p-0">
        @if (Model.History.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Plan</th>
                            <th>Period</th>
                            <th>Amount</th>
                            <th>Payment Status</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.History)
                        {
                            <tr>
                                <td><strong>@item.PlanName</strong></td>
                                <td>
                                    <div>@item.StartDate.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">to @item.EndDate.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>&#8377;@item.AmountPaid.ToString("N0")</td>
                                <td>
                                    <span class="badge @(item.PaymentStatus == "PAID" ? "bg-success" : "bg-warning")">
                                        @item.PaymentStatus
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(item.Status == "ACTIVE" ? "bg-success" : "bg-secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        <i class="bi bi-download"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state py-5 text-center">
                <i class="bi bi-receipt display-4 text-muted"></i>
                <h5 class="mt-3">No billing history</h5>
                <p class="text-muted mb-4">You don't have any subscription history yet.</p>
                <a asp-action="Index" class="btn btn-primary">
                    View Subscription Plans
                </a>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="MySubscription" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back to My Subscription
    </a>
</div>
