@{
    ViewData["Title"] = "Access Denied";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card text-center">
        <div class="mb-4">
            <div class="mx-auto mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <i class="bi bi-shield-x text-white" style="font-size: 2.5rem;"></i>
            </div>
        </div>

        <h2 class="mb-3">Access Denied</h2>
        <p class="text-muted mb-4">
            You don't have permission to access this page. This area is restricted to users with specific roles.
        </p>

        <div class="alert alert-warning text-start">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Possible reasons:</strong>
            <ul class="mb-0 mt-2">
                <li>Your account doesn't have the required permissions</li>
                <li>You need to complete your profile or KYC verification</li>
                <li>The page is restricted to specific user roles</li>
            </ul>
        </div>

        <div class="d-grid gap-2 mt-4">
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house me-2"></i>Go to Dashboard
            </a>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary">
                <i class="bi bi-person me-2"></i>View Profile
            </a>
        </div>

        <div class="mt-4">
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-link text-danger">
                    <i class="bi bi-box-arrow-right me-1"></i>Logout and try different account
                </button>
            </form>
        </div>
    </div>
</div>
