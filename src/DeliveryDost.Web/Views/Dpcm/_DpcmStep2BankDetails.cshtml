@model DeliveryDost.Web.ViewModels.Dpcm.DpcmRegistrationViewModel

<h4 class="mb-4"><i class="bi bi-bank me-2"></i>Bank Account Details</h4>
<p class="text-muted mb-4">Your commissions will be deposited to this account</p>

<form action="/Dpcm/SaveBankDetails" method="post" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" name="CurrentStep" value="2" />

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label class="form-label">Account Holder Name <span class="text-danger">*</span></label>
                <input type="text" name="BankDetails.AccountHolderName" value="@Model.BankDetails.AccountHolderName" class="form-control" placeholder="Name as per bank records" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Account Number <span class="text-danger">*</span></label>
                <input type="text" name="BankDetails.AccountNumber" value="@Model.BankDetails.AccountNumber" class="form-control" placeholder="Account Number" maxlength="18" id="accountNumber" required />
                <small class="text-muted">9-18 digits only</small>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Confirm Account Number <span class="text-danger">*</span></label>
                <input type="text" name="BankDetails.ConfirmAccountNumber" value="@Model.BankDetails.ConfirmAccountNumber" class="form-control" placeholder="Re-enter Account Number" maxlength="18" id="confirmAccountNumber" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">IFSC Code <span class="text-danger">*</span></label>
                <input type="text" name="BankDetails.IFSCCode" value="@Model.BankDetails.IFSCCode" class="form-control" placeholder="SBIN0001234" maxlength="11" id="ifscCode" style="text-transform: uppercase;" required />
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Bank Name</label>
                <input type="text" name="BankDetails.BankName" value="@Model.BankDetails.BankName" class="form-control" readonly id="bankName" placeholder="Auto-detected" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Branch Name</label>
                <input type="text" name="BankDetails.BranchName" value="@Model.BankDetails.BranchName" class="form-control" readonly id="branchName" placeholder="Auto-detected" />
            </div>
        </div>
    </div>

    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Commission Structure:</strong> You'll earn a percentage of each delivery completed by DPs you onboard.
    </div>

    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
        <a href="/Dpcm/GoToStep?step=1" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
        <button type="submit" class="btn btn-primary">
            Next <i class="bi bi-arrow-right ms-1"></i>
        </button>
    </div>
</form>

<script>
    document.getElementById('ifscCode').addEventListener('input', async function(e) {
        e.target.value = e.target.value.toUpperCase();
        if (e.target.value.length === 11) {
            try {
                const response = await fetch('https://ifsc.razorpay.com/' + e.target.value);
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('bankName').value = data.BANK || '';
                    document.getElementById('branchName').value = data.BRANCH || '';
                }
            } catch (err) { }
        }
    });

    document.getElementById('accountNumber').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });

    document.getElementById('confirmAccountNumber').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
</script>
